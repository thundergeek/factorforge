<!DOCTYPE html>
<html>
<head>
    <title>Alpha Mining Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #0a0e27;
            color: #e0e0e0;
            padding: 20px;
        }
        .container { max-width: 1800px; margin: 0 auto; }
        
        .header-section {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 20px;
            margin-bottom: 30px;
            align-items: center;
        }
        
        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .subtitle { color: #888; margin-bottom: 10px; }
        
        /* Beautiful System Monitor */
        .system-monitor {
            background: linear-gradient(135deg, #1a1f3a 0%, #0f1420 100%);
            border: 1px solid #2a2f4a;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }
        
        .monitor-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: #a0aec0;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .gauges-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .gauge-container {
            position: relative;
            text-align: center;
        }
        
        .gauge-canvas {
            width: 120px !important;
            height: 120px !important;
            margin: 0 auto;
        }
        
        .gauge-label {
            font-size: 0.85rem;
            color: #888;
            margin-top: 8px;
        }
        
        .gauge-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #e0e0e0;
            margin-top: 5px;
        }
        
        .gauge-subtext {
            font-size: 0.75rem;
            color: #666;
            margin-top: 2px;
        }
        
        /* Live History Graphs */
        .history-graphs {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }
        
        .graph-container {
            background: #0f1420;
            border: 1px solid #2a2f4a;
            border-radius: 8px;
            padding: 15px;
            height: 150px;
        }
        
        .graph-title {
            font-size: 0.75rem;
            color: #888;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .graph-canvas {
            width: 100% !important;
            height: 100px !important;
        }
        
        .top-grid { display: grid; grid-template-columns: 1fr 2fr; gap: 20px; margin-bottom: 20px; }
        .stats-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px; margin-bottom: 20px; }
        
        .card {
            background: #1a1f3a;
            border: 1px solid #2a2f4a;
            border-radius: 12px;
            padding: 24px;
        }
        
        .card h2 {
            font-size: 1.3rem;
            margin-bottom: 20px;
            color: #a0aec0;
        }
        
        .stat-box {
            background: #0f1420;
            padding: 20px;
            border-radius: 8px;
            border: 1px solid #2a2f4a;
            text-align: center;
        }
        
        .stat-label { color: #888; font-size: 0.9rem; margin-bottom: 8px; }
        .stat-value { font-size: 2.5rem; font-weight: bold; color: #667eea; }
        .stat-subtext { color: #888; font-size: 0.85rem; margin-top: 5px; }
        
        .form-group { margin-bottom: 20px; }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #a0aec0;
            font-weight: 500;
        }
        
        input, select {
            width: 100%;
            padding: 12px;
            background: #0f1420;
            border: 1px solid #2a2f4a;
            border-radius: 8px;
            color: #e0e0e0;
            font-size: 1rem;
        }
        
        .btn {
            width: 100%;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            margin-bottom: 10px;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4); }
        .btn-primary:disabled {
            background: #2a2f4a;
            cursor: not-allowed;
            transform: none;
        }
        
        .btn-danger {
            background: #e53e3e;
            color: white;
        }
        
        .progress-section {
            margin-bottom: 20px;
        }
        
        .progress-bar {
            width: 100%;
            height: 8px;
            background: #0f1420;
            border-radius: 4px;
            overflow: hidden;
            margin-top: 10px;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transition: width 0.3s;
            width: 0%;
        }
        
        .progress-text {
            display: flex;
            justify-content: space-between;
            color: #a0aec0;
            font-size: 0.9rem;
            margin-top: 5px;
        }
        
        .agents-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .agent-card {
            background: #0f1420;
            border: 2px solid #2a2f4a;
            border-radius: 8px;
            padding: 15px;
            position: relative;
            transition: all 0.3s;
        }
        
        .agent-card.active {
            border-color: #667eea;
            box-shadow: 0 0 20px rgba(102, 126, 234, 0.3);
        }
        
        .agent-card.excellent {
            border-color: #48bb78;
            box-shadow: 0 0 15px rgba(72, 187, 120, 0.2);
        }
        
        .agent-card.good {
            border-color: #4299e1;
            box-shadow: 0 0 15px rgba(66, 153, 225, 0.2);
        }
        
        .agent-card.weak { border-color: #ed8936; }
        .agent-card.bad { border-color: #e53e3e; }
        
        .agent-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .agent-name {
            font-weight: 600;
            color: #e0e0e0;
        }
        
        .agent-status {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .agent-status.idle { background: #4a5568; color: #e0e0e0; }
        .agent-status.working { background: #667eea; color: white; }
        .agent-status.excellent { background: #48bb78; color: white; }
        .agent-status.good { background: #4299e1; color: white; }
        .agent-status.weak { background: #ed8936; color: white; }
        .agent-status.bad { background: #e53e3e; color: white; }
        
        .agent-dsl {
            font-family: 'Courier New', monospace;
            font-size: 0.8rem;
            color: #a0aec0;
            margin: 8px 0;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
        
        .agent-metrics {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
            margin-top: 10px;
        }
        
        .agent-metric {
            background: #1a1f3a;
            padding: 6px;
            border-radius: 4px;
            text-align: center;
        }
        
        .agent-metric-label {
            font-size: 0.7rem;
            color: #888;
        }
        
        .agent-metric-value {
            font-size: 1rem;
            font-weight: 600;
            color: #667eea;
        }
        
        .agent-metric-value.good { color: #48bb78; }
        .agent-metric-value.bad { color: #e53e3e; }
        
        .log-toggle {
            background: #2a2f4a;
            border: none;
            color: #a0aec0;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            margin-bottom: 10px;
            font-size: 0.9rem;
        }
        
        .log-box {
            background: #0f1420;
            border: 1px solid #2a2f4a;
            border-radius: 8px;
            padding: 15px;
            height: 200px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            font-size: 0.75rem;
            display: none;
        }
        
        .log-box.show { display: block; }
        .log-line { margin-bottom: 3px; color: #a0aec0; }
        
        table {
            width: 100%;
            border-collapse: collapse;
        }
        
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #2a2f4a;
        }
        
        th {
            color: #a0aec0;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
        }
        
        .badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .badge.excellent { background: #48bb78; color: white; }
        .badge.good { background: #4299e1; color: white; }
        .badge.weak { background: #ed8936; color: white; }
        .badge.bad { background: #e53e3e; color: white; }
        
        @media (max-width: 1200px) {
            .header-section { grid-template-columns: 1fr; }
            .history-graphs { grid-template-columns: 1fr; }
        }
        
        @media (max-width: 768px) {
            .top-grid { grid-template-columns: 1fr; }
            .stats-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-section">
            <div>
                <h1>üöÄ Alpha Mining Dashboard</h1>
                <p class="subtitle">LLM-Powered Factor Discovery with Live System Monitoring</p>
            </div>
            
            <div class="system-monitor">
                <div class="monitor-title">‚ö° System Resources</div>
                
                <div class="gauges-grid">
                    <div class="gauge-container">
                        <canvas id="cpuGauge" class="gauge-canvas"></canvas>
                        <div class="gauge-label">üíª CPU</div>
                        <div class="gauge-value" id="cpuValue">0%</div>
                        <div class="gauge-subtext" id="cpuInfo">-- cores</div>
                    </div>
                    
                    <div class="gauge-container">
                        <canvas id="ramGauge" class="gauge-canvas"></canvas>
                        <div class="gauge-label">üß† RAM</div>
                        <div class="gauge-value" id="ramValue">0%</div>
                        <div class="gauge-subtext" id="ramInfo">0 / 0 GB</div>
                    </div>
                    
                    <div class="gauge-container" id="gpu0Container" style="display: none;">
                        <canvas id="gpu0Gauge" class="gauge-canvas"></canvas>
                        <div class="gauge-label">üéÆ GPU 0</div>
                        <div class="gauge-value" id="gpu0Value">0%</div>
                        <div class="gauge-subtext" id="gpu0Info">1070 Ti</div>
                    </div>
                    
                    <div class="gauge-container" id="gpu1Container" style="display: none;">
                        <canvas id="gpu1Gauge" class="gauge-canvas"></canvas>
                        <div class="gauge-label">üéÆ GPU 1</div>
                        <div class="gauge-value" id="gpu1Value">0%</div>
                        <div class="gauge-subtext" id="gpu1Info">1060</div>
                    </div>
                        <div class="gauge-value" id="gpuValue">0%</div>
                        <div class="gauge-subtext" id="gpuInfo">No GPU</div>
                    </div>
                </div>
                
                <div class="history-graphs">
                    <div class="graph-container">
                        <div class="graph-title">CPU History (60s)</div>
                        <canvas id="cpuHistory" class="graph-canvas"></canvas>
                    </div>
                    <div class="graph-container">
                        <div class="graph-title">RAM History (60s)</div>
                        <canvas id="ramHistory" class="graph-canvas"></canvas>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="top-grid">
            <div class="card">
                <h2>‚öôÔ∏è Control Panel</h2>
                
                <div class="form-group">
                    <label>Generations</label>
                    <input type="number" id="generations" value="10" min="1" max="50">
                </div>
                
                <div class="form-group">
                    <label>Agents per Generation</label>
                    <input type="number" id="agents" value="5" min="1" max="10">
                </div>
                
                <div class="form-group">
                    <label>Stock Symbols</label>
                    <input type="text" id="symbols" value="AAPL,MSFT,GOOGL,AMZN,NVDA,TSLA,META,BRK.B,V,JPM,JNJ,WMT,MA,PG,UNH,HD,DIS,BAC,XOM,COST,ADBE,PFE,NFLX,KO,PEP,CVX,MRK,INTC,CSCO,VZ">
                </div>
                
                <button id="startBtn" class="btn btn-primary" onclick="startEvolution()">
                    ‚ñ∂Ô∏è Start Evolution
                </button>
                <button id="stopBtn" class="btn btn-danger" onclick="stopEvolution()" disabled>
                    ‚èπÔ∏è Stop
                </button>
            </div>
            
            <div class="card">
                <h2>üìä Live Statistics</h2>
                
                <div class="progress-section">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <span style="color: #a0aec0; font-weight: 600;">Progress</span>
                        <span id="statusBadge" style="padding: 4px 12px; border-radius: 12px; background: #4a5568; font-size: 0.85rem;">‚è∏Ô∏è Idle</span>
                    </div>
                    <div class="progress-bar">
                        <div id="progressFill" class="progress-fill"></div>
                    </div>
                    <div class="progress-text">
                        <span id="progressText">Ready to start</span>
                        <span id="progressPercent">0%</span>
                    </div>
                </div>
                
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-label">Total Tested</div>
                        <div class="stat-value" id="totalFactors">0</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Good Factors</div>
                        <div class="stat-value" id="goodFactors" style="color: #48bb78;">0</div>
                        <div class="stat-subtext">IC > 0.05</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-label">Best IC</div>
                        <div class="stat-value" id="bestIC">0.000</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <h2>ü§ñ Agent Activity</h2>
            <p style="color: #888; font-size: 0.9rem; margin-bottom: 15px;">
                Colors: üü¢ Excellent (IC>0.10) ¬∑ üîµ Good (IC>0.05) ¬∑ üü† Weak (IC>0) ¬∑ üî¥ Bad (IC<0)
            </p>
            <div id="agentsGrid" class="agents-grid">
                <div class="agent-card">
                    <div class="agent-header">
                        <span class="agent-name">Waiting to start...</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <button class="log-toggle" onclick="toggleLogs()">üìã Show Detailed Logs</button>
            <div id="logs" class="log-box"></div>
        </div>
        
        <div class="card">
            <h2>üèÜ Top Factors</h2>
            <div style="overflow-x: auto;">
                <table id="resultsTable">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Rating</th>
                            <th>Factor DSL</th>
                            <th>IC</th>
                            <th>Sharpe</th>
                        </tr>
                    </thead>
                    <tbody id="resultsBody">
                        <tr><td colspan="5" style="text-align: center; color: #888;">No results yet</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <script>
        // Gauge Chart Configuration
        function createGauge(canvasId, label, color) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            return new Chart(ctx, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [0, 100],
                        backgroundColor: [color, '#1a1f3a'],
                        borderWidth: 0,
                        circumference: 180,
                        rotation: 270,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    cutout: '75%',
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    }
                }
            });
        }
        
        // Line Chart Configuration
        function createLineChart(canvasId, color) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            return new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array(30).fill(''),
                    datasets: [{
                        data: Array(30).fill(0),
                        borderColor: color,
                        backgroundColor: color + '20',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 0,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: { display: false },
                        y: { display: false, min: 0, max: 100 }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    }
                }
            });
        }
        
        // Initialize Charts
        const cpuGauge = createGauge('cpuGauge', 'CPU', '#4299e1');
        const ramGauge = createGauge('ramGauge', 'RAM', '#48bb78');
        let gpuGauge = null;
        
        const cpuHistory = createLineChart('cpuHistory', '#4299e1');
        const ramHistory = createLineChart('ramHistory', '#48bb78');
        
        // Update Gauge
        function updateGauge(gauge, value) {
            gauge.data.datasets[0].data = [value, 100 - value];
            gauge.update('none');
        }
        
        // Update Line Chart
        function updateLineChart(chart, value) {
            chart.data.datasets[0].data.shift();
            chart.data.datasets[0].data.push(value);
            chart.update('none');
        }
        
        // System Stats Refresh
        function refreshSystemStats() {
            fetch('/api/system')
                .then(r => r.json())
                .then(data => {
                    // CPU
                    const cpuPercent = data.cpu.percent;
                    updateGauge(cpuGauge, cpuPercent);
                    updateLineChart(cpuHistory, cpuPercent);
                    document.getElementById('cpuValue').textContent = cpuPercent.toFixed(1) + '%';
                    document.getElementById('cpuInfo').textContent = data.cpu.count + ' cores';
                    
                    // Change color based on load
                    if (cpuPercent > 85) {
                        cpuGauge.data.datasets[0].backgroundColor[0] = '#e53e3e';
                    } else if (cpuPercent > 65) {
                        cpuGauge.data.datasets[0].backgroundColor[0] = '#ed8936';
                    } else {
                        cpuGauge.data.datasets[0].backgroundColor[0] = '#4299e1';
                    }
                    
                    // RAM
                    const ramPercent = data.ram.percent;
                    updateGauge(ramGauge, ramPercent);
                    updateLineChart(ramHistory, ramPercent);
                    document.getElementById('ramValue').textContent = ramPercent.toFixed(1) + '%';
                    document.getElementById('ramInfo').textContent = 
                        data.ram.used_gb.toFixed(1) + ' / ' + data.ram.total_gb.toFixed(1) + ' GB';
                    
                    if (ramPercent > 85) {
                        ramGauge.data.datasets[0].backgroundColor[0] = '#e53e3e';
                    } else if (ramPercent > 70) {
                        ramGauge.data.datasets[0].backgroundColor[0] = '#ed8936';
                    } else {
                        ramGauge.data.datasets[0].backgroundColor[0] = '#48bb78';
                    }
                    
                    // GPU
                    if (data.gpu && data.gpu.length > 0) {
                        // GPU 0
                        if (data.gpu[0]) {
                            document.getElementById("gpu0Container").style.display = "block";
                            if (!gpuGauge) gpuGauge = createGauge("gpu0Gauge", "GPU0", "#ed8936");
                            const gpu0Percent = data.gpu[0].utilization || data.gpu[0].memory_percent || 0;
                            updateGauge(gpuGauge, gpu0Percent);
                            document.getElementById("gpu0Value").textContent = gpu0Percent.toFixed(1) + "%";
                            let gpu0Text = data.gpu[0].name.replace("GeForce ", "").substring(0, 12);
                            if (data.gpu[0].temperature) gpu0Text = data.gpu[0].temperature + "¬∞C";
                            document.getElementById("gpu0Info").textContent = gpu0Text;
                        }
                        // GPU 1
                        if (data.gpu[1]) {
                            document.getElementById("gpu1Container").style.display = "block";
                            if (!window.gpu1Gauge) window.gpu1Gauge = createGauge("gpu1Gauge", "GPU1", "#9f7aea");
                            const gpu1Percent = data.gpu[1].utilization || data.gpu[1].memory_percent || 0;
                            updateGauge(window.gpu1Gauge, gpu1Percent);
                            document.getElementById("gpu1Value").textContent = gpu1Percent.toFixed(1) + "%";
                            let gpu1Text = data.gpu[1].name.replace("GeForce ", "").substring(0, 12);
                            if (data.gpu[1].temperature) gpu1Text = data.gpu[1].temperature + "¬∞C";
                            document.getElementById("gpu1Info").textContent = gpu1Text;
                        }
                    }
                        
                        const gpuPercent = gpu.utilization || gpu.memory_percent || 0;
                        updateGauge(gpuGauge, gpuPercent);
                        document.getElementById('gpuValue').textContent = gpuPercent.toFixed(1) + '%';
                        
                        let gpuText = gpu.name.substring(0, 15);
                        if (gpu.temperature) gpuText = gpu.temperature + '¬∞C';
                        document.getElementById('gpuInfo').textContent = gpuText;
                        
                        if (gpuPercent > 85) {
                            gpuGauge.data.datasets[0].backgroundColor[0] = '#e53e3e';
                        } else {
                            gpuGauge.data.datasets[0].backgroundColor[0] = '#ed8936';
                        }
                    }
                })
                .catch(() => {});
        }
        
        setInterval(refreshSystemStats, 2000);
        refreshSystemStats();
        
        // Rest of the existing JavaScript (socket, agents, etc.) continues below...
        const socket = io();
        let currentGeneration = 0;
        let maxGenerations = 10;
        let currentAgent = 0;
        let maxAgents = 5;
        let agentStates = {};
        let previousBestIC = 0;
        
        socket.on('log', function(data) {
            const msg = data.message;
            
            if (msg.includes('NEW HIGH SCORE')) {
                showNewHighAlert();
            }
            
            if (msg.includes('GENERATION')) {
                const match = msg.match(/GENERATION (\d+)\/(\d+)/);
                if (match) {
                    currentGeneration = parseInt(match[1]);
                    maxGenerations = parseInt(match[2]);
                    updateProgress();
                }
            }
            
            if (msg.includes('ü§ñ Agent')) {
                const match = msg.match(/Agent (\d+)\/(\d+)/);
                if (match) {
                    currentAgent = parseInt(match[1]);
                    maxAgents = parseInt(match[2]);
                    renderAgentCards();
                }
            }
            
            if (msg.includes('DSL:')) {
                const dsl = msg.replace(/.*DSL:\s*/, '').trim();
                if (agentStates[currentAgent]) {
                    agentStates[currentAgent].dsl = dsl;
                    agentStates[currentAgent].status = 'working';
                }
                renderAgentCards();
            }
            
            if (msg.includes('IC=')) {
                const icMatch = msg.match(/IC=([-\d.]+)/);
                const sharpeMatch = msg.match(/Sharpe=([-\d.]+)/);
                if (icMatch && agentStates[currentAgent]) {
                    agentStates[currentAgent].ic = parseFloat(icMatch[1]);
                    agentStates[currentAgent].sharpe = sharpeMatch ? parseFloat(sharpeMatch[1]) : null;
                    agentStates[currentAgent].status = 'done';
                }
                renderAgentCards();
            }
            
            const logsDiv = document.getElementById('logs');
            const line = document.createElement('div');
            line.className = 'log-line';
            line.textContent = msg;
            logsDiv.appendChild(line);
            logsDiv.scrollTop = logsDiv.scrollHeight;
        });
        
        socket.on('status_change', function(data) {
            updateUI(data.running);
        });
        
        function showNewHighAlert() {
            const toast = document.createElement('div');
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: linear-gradient(135deg, #48bb78, #38a169);
                color: white;
                padding: 20px 30px;
                border-radius: 12px;
                box-shadow: 0 10px 40px rgba(72, 187, 120, 0.5);
                font-size: 1.2rem;
                font-weight: bold;
                z-index: 10000;
                animation: slideIn 0.5s, pulse 0.5s 0.5s;
            `;
            toast.innerHTML = 'üéâ NEW HIGH SCORE! üéâ';
            document.body.appendChild(toast);
            
            const style = document.createElement('style');
            style.textContent = `
                @keyframes slideIn {
                    from { transform: translateX(400px); opacity: 0; }
                    to { transform: translateX(0); opacity: 1; }
                }
                @keyframes pulse {
                    0%, 100% { transform: scale(1); }
                    50% { transform: scale(1.05); }
                }
            `;
            document.head.appendChild(style);
            
            setTimeout(() => toast.remove(), 5000);
        }
        
        function updateProgress() {
            const totalFactors = (currentGeneration - 1) * maxAgents + currentAgent;
            const maxFactors = maxGenerations * maxAgents;
            const percent = Math.round((totalFactors / maxFactors) * 100);
            
            document.getElementById('progressFill').style.width = percent + '%';
            document.getElementById('progressPercent').textContent = percent + '%';
            document.getElementById('progressText').textContent = `Generation ${currentGeneration}/${maxGenerations} ¬∑ Agent ${currentAgent}/${maxAgents}`;
        }
        
        function renderAgentCards() {
            const grid = document.getElementById('agentsGrid');
            grid.innerHTML = '';
            
            for (let i = 1; i <= maxAgents; i++) {
                const state = agentStates[i] || {};
                const card = document.createElement('div');
                card.className = 'agent-card';
                
                if (i === currentAgent) card.classList.add('active');
                
                if (state.ic !== undefined) {
                    if (state.ic > 0.10) card.classList.add('excellent');
                    else if (state.ic > 0.05) card.classList.add('good');
                    else if (state.ic > 0) card.classList.add('weak');
                    else card.classList.add('bad');
                }
                
                let statusClass = 'idle';
                let statusText = 'Idle';
                if (i < currentAgent && state.ic !== undefined) {
                    if (state.ic > 0.10) {
                        statusClass = 'excellent';
                        statusText = 'üåü Excellent';
                    } else if (state.ic > 0.05) {
                        statusClass = 'good';
                        statusText = '‚úÖ Good';
                    } else if (state.ic > 0) {
                        statusClass = 'weak';
                        statusText = '‚ö†Ô∏è Weak';
                    } else {
                        statusClass = 'bad';
                        statusText = '‚ùå Bad';
                    }
                } else if (i === currentAgent) {
                    statusClass = 'working';
                    statusText = 'üîÑ Working';
                }
                
                card.innerHTML = `
                    <div class="agent-header">
                        <span class="agent-name">Agent ${i}</span>
                        <span class="agent-status ${statusClass}">${statusText}</span>
                    </div>
                    <div class="agent-dsl">${state.dsl || 'Waiting...'}</div>
                    ${state.ic !== undefined ? `
                    <div class="agent-metrics">
                        <div class="agent-metric">
                            <div class="agent-metric-label">IC</div>
                            <div class="agent-metric-value ${state.ic > 0.05 ? 'good' : (state.ic < 0 ? 'bad' : '')}">${state.ic.toFixed(4)}</div>
                        </div>
                        <div class="agent-metric">
                            <div class="agent-metric-label">Sharpe</div>
                            <div class="agent-metric-value">${state.sharpe ? state.sharpe.toFixed(2) : 'N/A'}</div>
                        </div>
                    </div>
                    ` : ''}
                `;
                
                grid.appendChild(card);
            }
        }
        
        function toggleLogs() {
            const logs = document.getElementById('logs');
            logs.classList.toggle('show');
        }
        
        function updateUI(running) {
            const statusEl = document.getElementById('statusBadge');
            const startBtn = document.getElementById('startBtn');
            const stopBtn = document.getElementById('stopBtn');
            
            if (running) {
                statusEl.textContent = 'üîÑ Running';
                statusEl.style.background = '#48bb78';
                startBtn.disabled = true;
                stopBtn.disabled = false;
            } else {
                statusEl.textContent = '‚è∏Ô∏è Idle';
                statusEl.style.background = '#4a5568';
                startBtn.disabled = false;
                stopBtn.disabled = true;
                currentGeneration = 0;
                currentAgent = 0;
                agentStates = {};
                renderAgentCards();
            }
        }
        
        function startEvolution() {
            const config = {
                generations: parseInt(document.getElementById('generations').value),
                agents: parseInt(document.getElementById('agents').value),
                symbols: document.getElementById('symbols').value
            };
            
            maxGenerations = config.generations;
            maxAgents = config.agents;
            agentStates = {};
            
            fetch('/api/start', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(config)
            }).then(() => updateUI(true));
        }
        
        function stopEvolution() {
            fetch('/api/stop', {method: 'POST'})
                .then(() => updateUI(false));
        }
        
        function refreshResults() {
            fetch('/api/results')
                .then(r => r.json())
                .then(data => {
                    if (data.factors && data.factors.length > 0) {
                        const tbody = document.getElementById('resultsBody');
                        tbody.innerHTML = '';
                        
                        data.factors.slice(0, 10).forEach((f, i) => {
                            const ic = f.ic || 0;
                            let badge = '';
                            if (ic > 0.10) badge = '<span class="badge excellent">EXCELLENT</span>';
                            else if (ic > 0.05) badge = '<span class="badge good">GOOD</span>';
                            else if (ic > 0) badge = '<span class="badge weak">WEAK</span>';
                            else badge = '<span class="badge bad">BAD</span>';
                            
                            const row = `
                                <tr>
                                    <td>#${i+1}</td>
                                    <td>${badge}</td>
                                    <td style="font-family: monospace; font-size: 0.85rem;">${(f.dsl || 'N/A').substring(0, 60)}...</td>
                                    <td>${ic.toFixed(4)}</td>
                                    <td>${(f.sharpe || 0).toFixed(2)}</td>
                                </tr>
                            `;
                            tbody.innerHTML += row;
                        });
                    }
                })
                .catch(() => {});
            
            fetch('/api/status')
                .then(r => r.json())
                .then(data => {
                    document.getElementById('totalFactors').textContent = data.total_factors || 0;
                    document.getElementById('goodFactors').textContent = data.good_factors || 0;
                    
                    const currentBestIC = data.best_ic || 0;
                    document.getElementById('bestIC').textContent = currentBestIC.toFixed(3);
                    
                    if (currentBestIC > previousBestIC && previousBestIC > 0) {
                        const bestICEl = document.getElementById('bestIC');
                        bestICEl.style.transform = 'scale(1.2)';
                        bestICEl.style.color = '#48bb78';
                        setTimeout(() => {
                            bestICEl.style.transform = 'scale(1)';
                            bestICEl.style.color = '#667eea';
                        }, 500);
                    }
                    previousBestIC = currentBestIC;
                    
                    if (!data.running && currentGeneration > 0) {
                        updateUI(false);
                    }
                });
        }
        
        setInterval(refreshResults, 3000);
        refreshResults();
        renderAgentCards();
    </script>
</body>
</html>
